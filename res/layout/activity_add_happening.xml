<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <SeekBar
        android:id="@+id/happening_seeker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/happening_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/happening_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 am" />

        <TextView
            android:id="@+id/happening_spacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spacer" />

        <TextView
            android:id="@+id/happening_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January 1, 1980" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/happening_fields"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

    </LinearLayout>

    <Button
        android:id="@+id/btn_save_happening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/save" />

</LinearLayout>
